<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.shock.saturdaylifestyle.ui.main.viewState.ExploreTopPicksItemViewState" />

        <variable
            name="viewModel"
            type="com.shock.saturdaylifestyle.ui.main.viewModel.MainViewModel" />

    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_Food"
                android:layout_width="@dimen/_124sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="@dimen/_10sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="visible"
                    android:background="@color/f3_grey">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_Food"
                        android:layout_width="@dimen/_124sdp"
                        android:layout_height="@dimen/_174sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/explore"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/userName"
                        android:text="@{viewState.title}"
                        android:textSize="@dimen/_11sdp"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/iv_Food"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/iv_like_img"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_like_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_shape"
                        android:padding="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="@id/userName"
                        app:layout_constraintBottom_toBottomOf="@id/userName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/userName"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_type_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_oval_copy"
                        android:padding="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="@id/tv_type"
                        app:layout_constraintBottom_toBottomOf="@id/tv_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_type"/>


                    <TextView
                        android:id="@+id/tv_type"
                        android:text="Lebanese"
                        android:textSize="@dimen/_9ssp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/userName"
                        app:layout_constraintStart_toEndOf="@id/iv_type_img"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <TextView
                        android:id="@+id/tv_price"
                        android:text="Lebanese"
                        android:textSize="@dimen/_9ssp"
                        android:paddingStart="@dimen/_8sdp"
                        android:textColor="@color/teal_200"
                        android:fontFamily="@font/montserrat_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/iv_type_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:text="Acetate (Plant-based material)"
                        android:textSize="@dimen/_8ssp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:textColor="@color/teal_200"
                        android:fontFamily="@font/montserrat_light"
                        android:paddingBottom="@dimen/_8sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>