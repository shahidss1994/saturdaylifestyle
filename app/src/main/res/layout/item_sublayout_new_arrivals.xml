<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewState"
            type="com.shock.saturdaylifestyle.ui.main.viewState.NewArrivalItemViewState" />

        <variable
            name="viewModel"
            type="com.shock.saturdaylifestyle.ui.main.viewModel.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_Food"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="@dimen/_10sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_Food"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_250sdp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ll_container"
                    android:textSize="@dimen/_14ssp"
                    android:paddingTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/iv_Food"
                    app:layout_constraintStart_toEndOf="@id/iv_left_arr"
                    app:layout_constraintEnd_toStartOf="@id/iv_right_arr"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <ImageView
                    android:id="@+id/iv_left_arr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_left_arr"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ll_container" />

                <TextView
                    android:id="@+id/userName"
                    android:text="The Bake One (GhostForth)"
                    android:textSize="@dimen/_14ssp"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="@color/off_grey"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ll_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/iv_right_arr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_right_arr"
                    android:padding="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ll_container" />



                <TextView
                    android:id="@+id/tv_price"
                    android:text="Lebanese"
                    android:textSize="@dimen/_12ssp"
                    android:paddingTop="@dimen/_2sdp"
                    android:textColor="@color/light_grey"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/userName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_quantity"
                    android:text="No Minimum Order"
                    android:textSize="@dimen/_10ssp"
                    android:paddingTop="@dimen/_2sdp"
                    android:textColor="@color/dark_grey"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>