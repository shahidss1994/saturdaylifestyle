<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewState"
            type="com.shock.saturdaylifestyle.ui.loginRegister.viewState.LoginRegisterViewState" />

        <variable
            name="viewModel"
            type="com.shock.saturdaylifestyle.ui.loginRegister.viewModel.LoginRegisterViewModel" />

        <import type="android.view.View" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fui_transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_sheet_rounded"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_24sdp"
            android:paddingEnd="@dimen/_12sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clLoginOrCreateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{viewState.loginOrCreateAccountVisibility ? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <LinearLayout
                    android:id="@+id/rl_google"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_20ssp"
                    android:background="@drawable/bg_button1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/iv_google"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_toEndOf="@id/iv_google"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="center_horizontal"
                        android:text="@string/log_in_with_google"
                        android:textAllCaps="true"
                        android:textColor="@color/indigo"
                        android:textSize="14sp"
                        android:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_or"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_17sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="OR"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/rl_google"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_contibute"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginBottom="@dimen/_17sdp"
                    android:background="@drawable/bg_button2"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.onContinueClicked()}"
                    android:text="@string/text_continue"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:drawableViewState="@{viewState.continueBtnDrawableViewState}"
                    app:layout_constraintBottom_toTopOf="@+id/tv_or"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/phoneNoErrorMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/phone_number_must_contain_min_8_digits"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="@{viewState.showPhoneNoMessage ? View.VISIBLE : View.GONE}"
                    app:colorViewState="@{viewState.phoneNoMessageColorViewState}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutPhoneNumber" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginBottom="@dimen/_27sdp"
                    android:background="@drawable/bg_edittext"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    app:layout_constraintBottom_toTopOf="@+id/btn_contibute"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_phone_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_bottom_arrow"
                        android:drawablePadding="@dimen/_5sdp"
                        android:focusable="true"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:onClick="@{()->viewModel.showCountryCodePicker()}"
                        android:text="@{viewState.countryCodeNumberViewState.code}"
                        android:textColor="@color/indigo"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="+62" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/ed_phone_no"
                        textChangedListener="@{viewModel.textWatcher}"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@null"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center_vertical|start"
                        android:hint="Input your phone number"
                        android:inputType="number"
                        android:maxLength="12"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey_light"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="5"
                        app:layout_constraintStart_toEndOf="@id/tv_phone_code"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_17sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_horizontal"
                    android:text="Citizens receive exclusive offers, first dibs on new collections, and other member benefits"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/layoutPhoneNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/oswald_semibold"
                    android:gravity="center_horizontal"
                    android:text="log in or create your account"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="20sp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/tv_message" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clChooseVerificationMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bottom_sheet_rounded"
                android:visibility="@{viewState.loginOrCreateAccountVisibility ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:onClick="@{()->viewModel.onChooseVerificationBackClicked()}"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_arrow_back" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/oswald_semibold"
                        android:gravity="center_horizontal"
                        android:text="Choose verification method"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color_primary_black"
                        android:textSize="20sp"
                        android:visibility="visible" />

                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_message_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center_horizontal"
                    android:text="@{@string/choose_one_of_these_method_to_send_verification_code_to_number(viewState.phoneNo)}"
                    android:textColor="@color/text_color_primary_black"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_top"
                    tools:text="Choose one of these method to send verification code (OTP) to 0811-123-4567" />

                <RelativeLayout
                    android:id="@+id/rl_whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_button1"
                    android:onClick="@{()->viewModel.onSendOTPViaWhatsappClicked()}"
                    android:paddingStart="@dimen/_25sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_message_1">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_wa"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_wa" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="center_horizontal"
                        android:text="Send OTP via Whatsapp"
                        android:textColor="@color/indigo"
                        android:textSize="14sp"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_otp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/bg_button1"
                    android:onClick="@{()->viewModel.onSendOTPViaSMSClicked()}"
                    android:paddingStart="@dimen/_25sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_whatsapp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_sms" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="center_horizontal"
                        android:text="Send OTP via SMS"
                        android:textColor="@color/indigo"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_misscall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/bg_button1"
                    android:paddingStart="@dimen/_25sdp"
                    android:onClick="@{()->viewModel.showRegisterForm()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_otp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_phone" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:gravity="center_horizontal"
                        android:text="Verify via Missed Call"
                        android:textColor="@color/indigo"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_misscall" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>