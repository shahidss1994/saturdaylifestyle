<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainViewState"
            type="com.shock.saturdaylifestyle.ui.main.viewState.MainViewState" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toolbar"
            android:src="@drawable/logo"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_60sdp"
            android:padding="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/wa"
            android:src="@drawable/wa"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/off_grey"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintStart_toEndOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toStartOf="@id/like"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/like"
            android:src="@drawable/ic_shape"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            android:tint="@color/off_grey"
            app:layout_constraintStart_toEndOf="@id/wa"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toStartOf="@id/search"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/search"
            android:src="@drawable/ic_search_country"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintStart_toEndOf="@id/like"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            android:tint="@color/off_grey"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            items="@{mainViewState.homeItemList}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>